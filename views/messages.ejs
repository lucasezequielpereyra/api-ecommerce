<!DOCTYPE html>
<html lang="es">
  <%- include("template/head") %>
  <title>Messages E-Commerce</title>
  <body>
    <% if( typeof(user) !=="undefined") { %>
      <h1>
        Bienvenido <%= user.name %>
      </h1>
    <% } %>
    <div class='message-container'>
      <h3 class='container'>Centro de Mensajes</h3>
    
      <form action='' id='messageForm' class='form-block'>
        <div class='form-group'>
          <div class='col-lg-4'>
            <input
              type='text'
              class='form-control'
              id='input-userName'
              name='userName'
              value="<%= user.email %>"
              readonly
            />
          </div>
        </div>

        <div class='form-group'>
          <div class='col-lg-5'>
            <input
                type='text'
                class='form-control'
                id='input-message'
                placeholder='Mensaje...'
                name='message'
            />
            <% if( admin ) { %>
              <input
                type='text'
                class='form-control'
                id='input-response'
                placeholder='Responder a...'
                name='response'
            />
            <% } %>
            <input type='submit' class='btn btn-success' value='Enviar' />
        </div>
      </form>
    
    <div id='containerMessages' class='container'></div>
    
  </body>

  <script src='/socket.io/socket.io.js'></script>
  <script src='/scripts/messages.js'></script>
</html>
